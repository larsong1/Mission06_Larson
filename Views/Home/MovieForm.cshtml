@{
    ViewData["Title"] = "JHFC - Movies";
}

@model Movie

<h1>Please enter your movie submission!</h1>
<form method="POST">
    <input type="hidden" asp-for="MovieID"><br>

    <label asp-for="Category">Category:</label><br>
    <select asp-for="Category">
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryID">@c.CategoryName</option>
        }
    </select><br>

    <label asp-for="Title">Title:</label><br>
    <input asp-for="Title"><br>

    <label asp-for="Year">Year:</label><br>
    <input asp-for="Year"><br>

    <label asp-for="Director">Director:</label><br>
    <input asp-for="Director"><br>

    <label asp-for="Rating">Rating:</label><br>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br>

    <label asp-for="Edited">Edited:</label><br>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br>

    <label asp-for="LentTo">Lent To:</label><br>
    <input asp-for="LentTo"><br>

    <label asp-for="Notes">Notes:</label><br>
    <textarea asp-for="Notes"></textarea><br><br>

    <button type="submit">Submit Movie</button>
</form>