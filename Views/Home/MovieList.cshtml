@{
}

@model List<Movie>

<table class="table table-bordered">
    <thhead class="fontweight: bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td></td>
            <td></td>
        </tr>
    </thhead>
    <tbody>
        @foreach (var i in Model) {
            <tr>
                <td>@i.Category</td>
                <td>@i.Title</td>
                <td>@i.Year</td>
                <td>@i.Director</td>
                <td>@i.Rating</td>
                <td><a class="btn btn-secondary" asp-controller="Home" asp-action="Edit" asp-route-id="@i.MovieID">Edit</a></td>
                <td><a class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
