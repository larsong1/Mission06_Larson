@{
}

@model List<Movie>

<table class="table table-bordered table-striped">
    <thhead class="fontweight: bold">
        <tr class="table-primary">
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Copied To Plex</td>
            <td>Notes</td>
            <td></td>
            <td></td>
        </tr>
    </thhead>
    <tbody>
        @foreach (var i in Model) {
            <tr>
                <td>@i.Category.CategoryName</td>
                <td>@i.Title</td>
                <td>@i.Year</td>
                <td>@i.Director</td>
                <td>@i.Rating</td>
                <td>@i.Edited</td>
                <td>@i.LentTo</td>
                <td>@i.CopiedToPlex</td>
                <td>@i.Notes</td>
                <td><a class="btn btn-secondary" asp-controller="Home" asp-action="Edit" asp-route-id="@i.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@i.MovieId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
